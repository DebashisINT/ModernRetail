<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ll_root_style">
        <item name="android:background">@color/color_white</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="ll_style">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_header_style">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_style">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textColorHint">@color/color_grey</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center|start</item>
    </style>

    <style name="button_style">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/color_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="card_style">
        <item name="cardBackgroundColor">@color/color_blue_margin</item>
        <item name="cardCornerRadius">@dimen/_10sdp</item>
        <item name="cardElevation">@dimen/_3sdp</item>
        <item name="android:layout_margin">@dimen/_3sdp</item>
    </style>

    <style name="card_corner_top" parent="@style/Widget.MaterialComponents.CardView" >
        <item name="shapeAppearanceOverlay">@style/card_corner</item>
    </style>

    <style name="card_corner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_30sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_30sdp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="StyledTilEditTextTheme">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">#EB1414</item>
        <item name="colorControlActivated">#0B26D5</item>
        <item name="android:textColorPrimary">#29D50B</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="StyledTilEditText">
        <item name="android:theme">@style/StyledTilEditTextTheme</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="StyledEditText">
        <item name="android:background">@color/color_listing</item>
        <item name="android:textColorHint">@color/color_grey</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="navigationView">
        <item name="android:listDivider">@color/color_charcoal</item>
    </style>

    <style name="ThemeOverlay.App.DatePickerDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.App.DatePicker</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="ll_textinput_style" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textColorHint">@color/color_grey</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center|start</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>

        <item name="hintTextColor">@color/color_grey</item>
        <item name="colorControlActivated">@color/color_grey</item>
    </style>

</resources>