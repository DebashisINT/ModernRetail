<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/card_style"
    android:layout_margin="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ll_style"
        android:padding="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_25sdp"
            style="@style/ll_style"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                app:cardCornerRadius="@dimen/_250sdp"
                style="@style/card_style"
                app:cardBackgroundColor="@color/color_grey_light">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_store"
                    android:scaleType="fitXY"
                    android:padding="@dimen/_5sdp"/>

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="@dimen/_5sdp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/text_style"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:text="Store Name"/>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                app:cardCornerRadius="@dimen/_250sdp"
                style="@style/card_style"
                app:cardBackgroundColor="@color/color_blue_margin">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_edit"
                    android:scaleType="fitXY"
                    android:padding="@dimen/_5sdp"/>

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="@dimen/_5sdp"
                android:layout_height="match_parent"/>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                app:cardCornerRadius="@dimen/_250sdp"
                style="@style/card_style"
                app:cardBackgroundColor="@color/color_blue_margin">

                <ImageView
                    android:id="@+id/iv_sync_status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_sync"
                    android:scaleType="fitXY"
                    android:padding="@dimen/_3sdp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_25sdp"
            style="@style/ll_style"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                app:cardCornerRadius="@dimen/_250sdp"
                style="@style/card_style"
                app:cardBackgroundColor="@color/color_grey_light">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_location"
                    android:scaleType="fitXY"
                    android:padding="@dimen/_5sdp"/>

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="@dimen/_5sdp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_store_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/text_style"
                android:text="Address"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ll_style"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:cardCornerRadius="@dimen/_250sdp"
                    style="@style/card_style"
                    app:cardBackgroundColor="@color/color_grey_light">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_user"
                        android:scaleType="fitXY"
                        android:padding="@dimen/_5sdp"/>

                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/ll_style">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/text_style"
                        android:text="Contact Name"
                        android:textColor="@color/color_blue_steel_dark"/>

                    <TextView
                        android:id="@+id/tv_store_contact_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/text_style"
                        android:text="Contact Name"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:cardCornerRadius="@dimen/_250sdp"
                    style="@style/card_style"
                    app:cardBackgroundColor="@color/color_grey_light">

                    <ImageView
                        android:id="@+id/iv_contact_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_phone"
                        android:scaleType="fitXY"
                        android:padding="@dimen/_5sdp"/>

                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/ll_style">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/text_style"
                        android:text="Contact Number"
                        android:textColor="@color/color_blue_steel_dark"/>

                    <TextView
                        android:id="@+id/tv_store_contact_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/text_style"
                        android:text="Contact Number"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ll_style"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:cardCornerRadius="@dimen/_250sdp"
                    style="@style/card_style"
                    app:cardBackgroundColor="@color/color_grey_light">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_whatsapp"
                        android:scaleType="fitXY"
                        android:padding="@dimen/_5sdp"/>

                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/ll_style">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/text_style"
                        android:text="Whatsapp"
                        android:textColor="@color/color_blue_steel_dark"/>

                    <TextView
                        android:id="@+id/tv_store_whatsapp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/text_style"
                        android:text="Whatsapp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:cardCornerRadius="@dimen/_250sdp"
                    style="@style/card_style"
                    app:cardBackgroundColor="@color/color_grey_light">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_mail"
                        android:scaleType="fitXY"
                        android:padding="@dimen/_5sdp"/>

                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/ll_style">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/text_style"
                        android:text="Email"
                        android:textColor="@color/color_blue_steel_dark"/>

                    <TextView
                        android:id="@+id/tv_store_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/text_style"
                        android:text="Email"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ll_style"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:cardCornerRadius="@dimen/_250sdp"
                    style="@style/card_style"
                    app:cardBackgroundColor="@color/color_grey_light">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_store"
                        android:scaleType="fitXY"
                        android:padding="@dimen/_5sdp"/>

                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/ll_style">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/text_style"
                        android:text="Store Type"
                        android:textColor="@color/color_blue_steel_dark"/>

                    <TextView
                        android:id="@+id/tv_store_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/text_style"
                        android:text="Store Type"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:cardCornerRadius="@dimen/_250sdp"
                    style="@style/card_style"
                    app:cardBackgroundColor="@color/color_grey_light">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_measurement"
                        android:scaleType="fitXY"
                        android:padding="@dimen/_5sdp"/>

                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/ll_style">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/text_style"
                        android:text="Size/Area"
                        android:textColor="@color/color_blue_steel_dark"/>

                    <TextView
                        android:id="@+id/tv_store_size_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/text_style"
                        android:text="Size/Area"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"/>
        
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:scrollbarSize="0dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/ll_style"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="@dimen/_80sdp"
                    style="@style/card_style"
                    app:cardBackgroundColor="@color/color_white_smoke">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="@style/ll_style"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/ic_operation"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            style="@style/text_style"
                            android:text="Operation"
                            android:textColor="@color/color_blue_steel_dark"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="@dimen/_80sdp"
                    style="@style/card_style"
                    app:cardBackgroundColor="@color/color_white_smoke">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="@style/ll_style"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/ic_order"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            style="@style/text_style"
                            android:text="Order"
                            android:textColor="@color/color_blue_steel_dark"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="@dimen/_80sdp"
                    style="@style/card_style"
                    app:cardBackgroundColor="@color/color_white_smoke">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="@style/ll_style"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/ic_survey"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            style="@style/text_style"
                            android:text="Survey"
                            android:textColor="@color/color_blue_steel_dark"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="@dimen/_80sdp"
                    style="@style/card_style"
                    app:cardBackgroundColor="@color/color_white_smoke">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="@style/ll_style"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/ic_activity"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            style="@style/text_style"
                            android:text="Activity"
                            android:textColor="@color/color_blue_steel_dark"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            
        </HorizontalScrollView>

    </LinearLayout>

</androidx.cardview.widget.CardView>