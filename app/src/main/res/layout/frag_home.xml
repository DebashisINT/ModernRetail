<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ll_root_style">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/ll_style"
        android:gravity="center|top">
        
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_75sdp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/shape_bottom_curve"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dashboard_topbar_design"
                android:scaleType="fitXY"
                android:layout_gravity="start|top"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/ll_style"
                android:gravity="center|start|top"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    style="@style/card_style">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_profile_dummy"
                        android:padding="@dimen/_5sdp"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/ll_style"
                    android:gravity="center|start"
                    android:layout_marginLeft="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        style="@style/text_style"
                        android:text="Welcome,"
                        android:textColor="@color/color_white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        style="@style/text_style"
                        android:text="User Name"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_16sdp"/>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_3sdp"
                android:scrollbarSize="0dp"
                android:clipToPadding="false"
                android:paddingBottom="150dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/ll_style"
                    android:padding="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        style="@style/ll_style"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:id="@+id/fl_stores"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_65sdp"
                                android:layout_gravity="bottom"
                                style="@style/card_style">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Stores"
                                    style="@style/text_style"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:layout_gravity="center" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_gravity="center|top"
                                app:cardCornerRadius="@dimen/_250sdp"
                                android:layout_weight="1"
                                style="@style/card_style"
                                app:cardBackgroundColor="#88bfff">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_store_color"
                                    android:scaleType="centerInside"
                                    android:padding="@dimen/_7sdp"/>

                            </androidx.cardview.widget.CardView>

                        </FrameLayout>

                        <Space
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="match_parent"/>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_65sdp"
                                android:layout_gravity="bottom"
                                style="@style/card_style">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Stock"
                                    android:gravity="center"
                                    style="@style/text_style"
                                    android:textStyle="bold"
                                    android:layout_gravity="center" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_gravity="center|top"
                                app:cardCornerRadius="@dimen/_250sdp"
                                android:layout_weight="1"
                                style="@style/card_style"
                                app:cardBackgroundColor="#88bfff">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_stock"
                                    android:scaleType="centerInside"
                                    android:padding="@dimen/_7sdp"/>

                            </androidx.cardview.widget.CardView>

                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        style="@style/ll_style"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5sdp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_65sdp"
                                android:layout_gravity="bottom"
                                style="@style/card_style">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Planogram"
                                    android:gravity="center"
                                    style="@style/text_style"
                                    android:textStyle="bold"
                                    android:layout_gravity="center" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_gravity="center|top"
                                app:cardCornerRadius="@dimen/_250sdp"
                                android:layout_weight="1"
                                style="@style/card_style"
                                app:cardBackgroundColor="#88bfff">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_planogram"
                                    android:scaleType="centerInside"
                                    android:padding="@dimen/_7sdp"/>

                            </androidx.cardview.widget.CardView>

                        </FrameLayout>

                        <Space
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="match_parent"/>

                        <FrameLayout
                            android:id="@+id/fl_complaint_feedback"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_65sdp"
                                android:layout_gravity="bottom"
                                style="@style/card_style">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Complaint &amp;\nFeedback"
                                    android:gravity="center"
                                    style="@style/text_style"
                                    android:textStyle="bold"
                                    android:layout_gravity="center" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_gravity="center|top"
                                app:cardCornerRadius="@dimen/_250sdp"
                                android:layout_weight="1"
                                style="@style/card_style"
                                app:cardBackgroundColor="#88bfff">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_complaint"
                                    android:scaleType="centerInside"
                                    android:padding="@dimen/_7sdp"/>

                            </androidx.cardview.widget.CardView>

                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        style="@style/ll_style"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5sdp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_65sdp"
                                android:layout_gravity="bottom"
                                style="@style/card_style">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Order"
                                    android:gravity="center"
                                    style="@style/text_style"
                                    android:textStyle="bold"
                                    android:layout_gravity="center" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_gravity="center|top"
                                app:cardCornerRadius="@dimen/_250sdp"
                                android:layout_weight="1"
                                style="@style/card_style"
                                app:cardBackgroundColor="#88bfff">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_order_color"
                                    android:scaleType="centerInside"
                                    android:padding="@dimen/_7sdp"/>

                            </androidx.cardview.widget.CardView>

                        </FrameLayout>

                        <Space
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="match_parent"/>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_65sdp"
                                android:layout_gravity="bottom"
                                style="@style/card_style">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Survey"
                                    android:gravity="center"
                                    style="@style/text_style"
                                    android:textStyle="bold"
                                    android:layout_gravity="center" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_gravity="center|top"
                                app:cardCornerRadius="@dimen/_250sdp"
                                android:layout_weight="1"
                                style="@style/card_style"
                                app:cardBackgroundColor="#88bfff">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_survey_color"
                                    android:scaleType="centerInside"
                                    android:padding="@dimen/_7sdp"/>

                            </androidx.cardview.widget.CardView>

                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        style="@style/ll_style"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5sdp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_65sdp"
                                android:layout_gravity="bottom"
                                style="@style/card_style">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Merchandising\nOperations"
                                    android:gravity="center"
                                    style="@style/text_style"
                                    android:textStyle="bold"
                                    android:layout_gravity="center" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_gravity="center|top"
                                app:cardCornerRadius="@dimen/_250sdp"
                                android:layout_weight="1"
                                style="@style/card_style"
                                app:cardBackgroundColor="#88bfff">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_merchandise"
                                    android:scaleType="centerInside"
                                    android:padding="@dimen/_7sdp"/>

                            </androidx.cardview.widget.CardView>

                        </FrameLayout>

                        <Space
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="match_parent"/>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_65sdp"
                                android:layout_gravity="bottom"
                                style="@style/card_style">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Daily Activity"
                                    style="@style/text_style"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:layout_gravity="center" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_gravity="center|top"
                                app:cardCornerRadius="@dimen/_250sdp"
                                android:layout_weight="1"
                                style="@style/card_style"
                                app:cardBackgroundColor="#88bfff">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_calender"
                                    android:scaleType="centerInside"
                                    android:padding="@dimen/_7sdp"/>

                            </androidx.cardview.widget.CardView>

                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        style="@style/ll_style"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5sdp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_65sdp"
                                android:layout_gravity="bottom"
                                style="@style/card_style">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Product Catalog"
                                    style="@style/text_style"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:layout_gravity="center" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_gravity="center|top"
                                app:cardCornerRadius="@dimen/_250sdp"
                                android:layout_weight="1"
                                style="@style/card_style"
                                app:cardBackgroundColor="#88bfff">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_catalog"
                                    android:scaleType="centerInside"
                                    android:padding="@dimen/_7sdp"/>

                            </androidx.cardview.widget.CardView>

                        </FrameLayout>

                        <Space
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="match_parent"/>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_65sdp"
                                android:layout_gravity="bottom"
                                style="@style/card_style">

                                <TextView
                                    android:id="@+id/tv_sales_promotion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sales Promotion\nOffer/Scheme/Discount"
                                    style="@style/text_style"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:layout_gravity="center" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_gravity="center|top"
                                app:cardCornerRadius="@dimen/_250sdp"
                                android:layout_weight="1"
                                style="@style/card_style"
                                app:cardBackgroundColor="#88bfff">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_sales_promotion"
                                    android:scaleType="centerInside"
                                    android:padding="@dimen/_7sdp"/>

                            </androidx.cardview.widget.CardView>

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/card_style"
                android:layout_margin="@dimen/_10sdp"
                app:cardBackgroundColor="@color/color_blue_steel"
                android:layout_gravity="bottom|end"
                android:visibility="gone">

                <me.ibrahimsn.lib.SmoothBottomBar
                    android:id="@+id/smooth_bottom_bar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    app:menu="@menu/bottom_nav_menu"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    app:indicatorRadius="@dimen/_10sdp"
                    app:iconSize="@dimen/_14sdp"
                    app:iconTintActive="@color/color_black"
                    app:iconTint="@color/color_grey_light"
                    app:itemTextColor="@color/color_black"
                    app:textColor="@color/color_black"
                    app:backgroundColor="@color/color_trans"
                    app:cornerRadius="10dp"
                    app:iconMargin="5dp"
                    app:indicatorColor="@color/color_blue_baby" />

            </androidx.cardview.widget.CardView>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>